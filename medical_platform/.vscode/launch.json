{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: MediAI Platform",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "autoReload": {
                "enable": true
            },
            "console": "integratedTerminal"
        }
    ]
}